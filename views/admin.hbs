<div class="edit-title">
    <span>Редактор сайта</span>
    <a id="save-button"><img src="/img/save-icon.png" alt="save"></a>
    <a href="/admin/logout"><img src="/img/exit-icon.png" alt="exit"></a>
</div>
<script>
        document.getElementById('save-button').addEventListener("click",()=>{
        document.getElementById('edit-form').submit();
    })
</script>

<main class="mt-4">

    <form id="edit-form" action="/admin" method="POST">

        <div class="container" id="intro">

            <textarea name="welcome_title" rows="1">{{text.welcome_title}}</textarea>
            <textarea name="welcome_text" rows="5">{{text.welcome_text}}</textarea>
            <img src="/img/delimiter.png" alt="" class="delimiter my-4">
            <textarea name="promo_text" rows="5">{{text.promo_text}}</textarea>
        </div>
        <br>


        <div class="container fade" id="history">
            <textarea name="history_title" rows="1">{{text.history_title}}</textarea>
            <textarea name="history_text" rows="10">{{text.history_text}}</textarea>
        </div>
        <br>

        <div id="photo" class="fade container gallery-container">
            <textarea name="photo_title" rows="1">{{text.photo_title}}</textarea>

            <div class="tz-gallery">
                <div class="card-columns">

                    {{#each galleryImages}}
                    <div class="card photo-card">
                        <div class="thumbnail">
                            <a class="lightbox " style="overflow:hidden;" href="/img/gallery/{{this}}.jpg">
                                <img class="card-img-top" style=" width: 100%;" src="/img/gallery/{{this}}.jpg"
                                    alt="Traffic">
                            </a>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>

        </div>
        <br>

        <div class="container fade" id="video">
            <textarea name="video_title" rows="1">{{text.video_title}}</textarea>

            <div>
                <!--Carousel Wrapper-->
                <div id="carousel-thumb" class="carousel slide carousel-fade carousel-thumbnails" data-interval="false"
                    data-ride="carousel">
                    <!--Slides-->
                    <div class="carousel-inner video-container" role="listbox">
                        <div class="carousel-item active">
                            <div class="iframe-container">
                                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/JToVTK54Gao"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="iframe-container">
                                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/VIp_4n_7EBc"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="iframe-container">
                                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/DLhxonSVaCg"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="iframe-container">
                                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/rqN8jjSBa6I"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="iframe-container">
                                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/RlL9UoclL3A"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="iframe-container">
                                <iframe class="responsive-iframe" src="https://www.youtube.com/embed/LQkHxRA_too"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen></iframe>
                            </div>
                        </div>

                    </div>
                    <!--/.Slides-->

                    <ol class="carousel-indicators">
                        <li data-target="#carousel-thumb" data-slide-to="0" class="active"> <img
                                class="d-block full-width" src="https://i3.ytimg.com/vi/JToVTK54Gao/hqdefault.jpg "
                                class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="1"><img class="d-block full-width"
                                src="https://i3.ytimg.com/vi/VIp_4n_7EBc/hqdefault.jpg" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="2"><img class="d-block full-width"
                                src="https://i3.ytimg.com/vi/DLhxonSVaCg/hqdefault.jpg" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="3" class="active"> <img
                                class="d-block full-width" src="https://i3.ytimg.com/vi/rqN8jjSBa6I/hqdefault.jpg"
                                class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="4"><img class="d-block full-width"
                                src="https://i3.ytimg.com/vi/RlL9UoclL3A/hqdefault.jpg" class="img-fluid"></li>
                        <li data-target="#carousel-thumb" data-slide-to="5"><img class="d-block full-width"
                                src="https://i3.ytimg.com/vi/LQkHxRA_too/hqdefault.jpg" class="img-fluid"></li>
                    </ol>
                </div>
                <!--/.Carousel Wrapper-->
            </div>
        </div>

        <br>

        <div class="container fade" id="repertoire">
            <textarea name="repertoire_title" rows="1">{{text.repertoire_title}}</textarea>

            <div class="row">
                <div class="col-12 mx-auto">
                    <!-- Accordion -->
                    <div id="accordionExample" class="accordion">

                        {{#each repertoire}}
                        <!-- Accordion item-->
                        <div class="card">
                            <div id="heading{{this.num}}" class="card-header border-0">
                                <h6 class="mb-0 font-weight-bold"><a href="#" data-toggle="collapse"
                                        data-target="#collapse{{this.num}}" aria-expanded="false"
                                        aria-controls="collapseOne"
                                        class="pr-5 d-block position-relative collapsed collapsible-link py-2"><textarea name="repertoire[{{this.num}}][name]" rows="1">{{this.name}}</textarea></a>
                                </h6>
                            </div>
                            <div id="collapse{{this.num}}" aria-labelledby="heading{{this.num}}"
                                data-parent="#accordionExample" class="collapse">
                                <div class="card-body">
                                    <textarea name="repertoire[{{this.num}}][data]" rows="10">{{this.data}}</textarea>
                                </div>
                            </div>
                        </div>
                        {{/each}}

                    </div>
                </div>
            </div>

        </div>
        <br>






        <div class="container fade" id="contacts">
            <textarea name="contacts_title" rows="1">{{text.contacts_title}}</textarea>

            <p>
                <div id="phones">
                {{#each text.contacts_phones}}
                <input type="hidden" name="contacts_phones[{{this.id}}][id]" value="{{this.id}}">
                <textarea name="contacts_phones[{{this.id}}][name]" rows="1">{{this.name}}</textarea>
                <textarea name="contacts_phones[{{this.id}}][phone]" rows="1">{{this.phone}}</textarea>
                {{/each}}
                    
                </div>

                <textarea  name="contacts_email" rows="1">{{text.contacts_email}}</textarea>

            </p>
            <div id="social">
                <a href="https://www.youtube.com/channel/UCu7rBk0zuJmjdTyWGTr2TPA/" target="_blank">
                    <img class="social-img" src="/img/youtube-logo.jpg" alt="">
                </a>
                <a href="https://www.facebook.com/groups/286238234775563//" target="_blank">
                    <img class="social-img" src="/img/facebook-logo.png" alt="">
                </a>
                <a href="https://vk.com/club83445962/" target="_blank">
                    <img class="social-img" src="/img/vk-logo.png" alt="">
                </a>
            </div>
        </div>

        <img src="/img/delimiter.png" alt="" class="delimiter my-4">

    </form>

</main>